<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_splashscreen_bg"
        tools:context=".presentation.ui.fragment.SplashScreenFragment">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_hearts_splashscreen_bg"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <com.google.android.material.textview.MaterialTextView
                style="@style/LogoAppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_book_app"/>
            <com.google.android.material.textview.MaterialTextView
                style="@style/SecondarySplashText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/text_welcome_to_book_app"/>
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:indeterminate="true"
                android:indeterminateTintMode="src_in"
                android:layout_marginTop="48dp"
                android:layout_marginHorizontal="50dp"
                app:indicatorColor="@color/white"
                app:trackColor="@color/white_20_transparent"
                app:trackCornerRadius="6dp"
                app:trackThickness="6dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>
</layout>
